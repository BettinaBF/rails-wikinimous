
<div class = "container">
  <div class= "row">
    <div class = "col-sm-10">
      <h3>Wiki Wierd Articles</h3>
    </div>
    <div class="col-sm-2 btn">
      <%= link_to 'new article', new_article_path %>
    </div>

  <div class= "row">
    <div class = "col-sm-10">
      <% @articles.each do |article| %>
        <h2><%= link_to article.title, article_path(article)%></h2>
        <p><%= article.content[0,100]%>...</p>
        <%end%>
    </div>
  </div>
</div>
